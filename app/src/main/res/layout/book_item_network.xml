<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="bookItem"
            type="com.skrash.book.data.network.model.BookItemDto" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:text="@{bookItem.title}" />

        <TextView
            android:id="@+id/tvAuthor"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:text="@{bookItem.author}" />

        <TextView
            android:id="@+id/tvTags"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_width="wrap_content" />

        <TextView
            android:id="@+id/tvGenres"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_width="wrap_content" />


        <RatingBar
            android:id="@+id/ratingBar"
            android:isIndicator="true"
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:rating="@{bookItem.rating.floatValue()}" />

        <RatingBar
            android:id="@+id/popularityBar"
            android:isIndicator="true"
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:rating="@{bookItem.popularity.floatValue()}" />

    </LinearLayout>

</layout>