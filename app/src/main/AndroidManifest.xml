<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".BookApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Book"
        tools:targetApi="31">
        <activity
            android:name=".presentation.browseNetworkBookActivity.BrowseNetworkBook"
            android:exported="false" />

        <provider
            android:name=".data.BookProvider"
            android:authorities="com.skrash.book"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".presentation.openBookActivity.OpenBookActivity"
            android:exported="false"
            android:theme="@style/Theme.Book.noActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.addBookActivity.AddBookActivity"
            android:exported="false"
            android:theme="@style/Theme.Book.noActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.bookInfoActivity.BookInfoActivity"
            android:exported="false"
            android:theme="@style/Theme.Book.noActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.mainAcitivity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Book.noActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <service android:name=".service.TorrentService" />
    </application>

</manifest>